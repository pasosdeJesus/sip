/** Tema **/

<% tema = ::Sip::TemasHelper.tema_usuario(defined?(current_usuario) ?  current_usuario : nil) %>

.navbar-default .navbar-nav > li > a { 
  color: <%= tema.nav_fuente || '#ffffff' %>; 
}

.navbar-default .navbar-brand { 
  color: <%= tema.nav_fuente || '#ffffff' %>; 
}

.navbar-light .navbar-nav .nav-link {
  color: <%= tema.nav_fuente || '#ffffff' %> !important; 
}

.navbar-light .navbar-brand {
  color: <%= tema.nav_fuente || '#ffffff' %> !important; 
}

.navbar {
  min-height: 30px;
  background-image: linear-gradient(<%= tema.nav_ini || '#95c4ff' %>, <%= tema.nav_fin || '#266dd3' %>);
  background-repeat: repeat-x;
  margin-bottom: 5px;
}

.table-striped > tbody > tr:nth-child(odd) {
  background-color: <%= tema.fondo_lista || '#95c4ff' %>;
}

.dropdown-menu {
  background-color: <%= tema.nav_fin || '#266dd3' %>;
}

.dropdown-item {
  color: <%= tema.nav_fuente || '#ffffff' %>;
}

.dropdown-item:hover {
  color: <%= tema.color_flota_subitem_fuente || '#ffffff' %>;
  background-color: <%= tema.color_flota_subitem_fondo || '#266dd3' %>
}

.alert-success {
  color: <%= tema.alerta_exito_fuente || '#468847' %>;
  background-color: <%= tema.alerta_exito_fondo || '#dff0d8' %>
}

.alert-danger {
  color: <%= tema.alerta_problema_fuente || '#721c24' %>;
  background-color: <%= tema.alerta_problema_fondo || '#f8d7da' %>;
}

.btn {
  background-image: linear-gradient(to bottom, <%= tema.btn_accion_fondo_ini || '#ffffff' %>, <%= tema.btn_accion_fondo_fin || '#e6e6e6' %>);
  color: <%= tema.btn_accion_fuente || '#000000' %>;
}

.btn-primary {
  background-image: linear-gradient(to bottom, <%= tema.btn_primario_fondo_ini || '#0088cc' %>, <%= tema.btn_primario_fondo_fin || '#0044cc'%>);
  color: <%= tema.btn_primario_fuente || '#ffffff' %>;
}

.btn-danger {
  background-image: linear-gradient(to bottom, <%= tema.btn_peligro_fondo_ini || '#ee5f5b' %>, <%= tema.btn_peligro_fondo_fin || '#bd362f' %>);
  color: <%= tema.btn_peligro_fuente || '#ffffff'%>;
}

body {
  background-color: <%= tema.fondo || '#ffffff' %>;
  color: <%=tema.color_fuente || '#000000' %>;
}

.card {
  background-color: <%= tema.fondo || '#ffffff' %>;
  color: <%=tema.color_fuente || '#000000' %>;
}

.form-control {
  background-color: <%= tema.fondo || '#ffffff' %>;
  color: <%=  tema.color_fuente || '#000000' %>;
}

table {
  color: <%= tema.color_fuente || '#000000' %>;
}


/** Otros **/

.form-horizontal .control-label {
  padding-right: 20px;
}

.input {
  padding: 2px;
  border: 1px solid #ffffff;
}

.accordion-group {
  border: 2px solid #e5e5e5;
  border-radius: 10px;
  -webkit-border-radius: 10px;
}

.page-header {
  margin: 30px 0 30px;
}

.navbar-nav > li > a {
  padding-top: 10px;
  padding-bottom: 10px;
}

.navbar-brand {
  padding: 10px 10px;
  height: auto;
}



.master-container {
  margin-top: 20px;
}

.btn {
  background-color: #f5f5f5;
  color: #333333;
  background-image: linear-gradient(to bottom, #ffffff, #e6e6e6);
  background-repeat: repeat-x;
  border: 1px solid #cccccc;
  border-bottom-color: #b3b3b3;
  box-shadow: inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05);
}
.btn-danger {
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  background-color: #da4f49;
  background-image: linear-gradient(to bottom, #ee5f5b, #bd362f);
  background-repeat: repeat-x;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}

.btn-primary {
  color: #ffffff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  background-color: #006dcc;
  background-image: linear-gradient(to bottom, #0088cc, #0044cc);
  background-repeat: repeat-x;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}

.error {
  padding: 2px;
  background-color: red;
  display: table;
}


.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  margin-bottom: 0px;
  background-color: #c00;
  color: #fff;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}

.pagination {
  text-align: center;
}

p.derechos {
  font-size: 80%;
  color: #000000;
  background-color: #f8f8f8;
  border-top: 1px solid #e7e7e7;
}

.anexosdiv {
  border: 1px solid #e7e7e7;
  border-radius: 5px;
}


/* Gr√°ficos de chosen */
.chosen-container-single .chosen-single abbr {
  background: url('<%= asset_path("chosen-sprite.png") %>') -42px 1px no-repeat !important;
}

.chosen-container-single .chosen-single div b {
  background: url('<%= asset_path("chosen-sprite.png") %>')  no-repeat 0px 2px !important;
}

.chosen-container-single .chosen-search input[type="text"] {
  background: url('<%= asset_path("chosen-sprite.png") %>')  no-repeat 100% -20px !important;
}

.chosen-container-multi .chosen-choices li.search-choice .search-choice-close {
  background: url('<%= asset_path("chosen-sprite.png") %>') -42px 1px no-repeat !important;
}

.chosen-rtl .chosen-search input[type="text"] {
  background: url('<%= asset_path("chosen-sprite.png") %>') no-repeat -30px -20px !important;
}

.page-link {
  background-color: <%= tema.fondo || '#ffffff' %>;
}

.em8 {
  width: 8em;
}

.panel-heading {
	text-align: center;
}

.tabpanel {
  margin-bottom: 2rem;
}

.chosen-container.chosen-container-single {
      width: 100% !important;
}

.tooltip { 
  pointer-events: none;
}

.sip-sf-bs-input {
  margin: 0.25em;
}

.accordion {
  margin-top: 1em;
  margin-bottom: 1em;
}

.form-group.select {
  margin-bottom: 0.5em;
}
