/** Tema **/

<% tema = ::Sip::TemasHelper.tema_usuario(defined?(current_usuario) ?  current_usuario : nil) %>


.navbar-default .navbar-nav > li > a { 
	color: <%= tema.nav_fuente %>; 
}

.navbar-default .navbar-brand { 
	color: <%= tema.nav_fuente %>; 
}

.navbar-light .navbar-nav .nav-link {
	color: <%= tema.nav_fuente %> !important; 
}

.navbar-light .navbar-brand {
	color: <%= tema.nav_fuente %> !important; 
}

.navbar {
	min-height: 30px;
	background-image: linear-gradient(<%= tema.nav_ini %>, <%= tema.nav_fin %>);
	background-repeat: repeat-x;
	margin-bottom: 5px;
}

.table-striped > tbody > tr:nth-child(odd) {
	background-color: <%= tema.fondo_lista %>;
}

.dropdown-menu {
  background-color: <%= tema.nav_fin %>;
}

.dropdown-item {
  color: <%= tema.nav_fuente %>;
}

.dropdown-item:hover {
  color: <%= tema.color_flota_subitem_fuente %>;
  background-color: <%= tema.color_flota_subitem_fondo %>
}

.alert-success {
  color: <%= tema.alerta_exito_fuente %>;
  background-color: <%= tema.alerta_exito_fondo %>
}

.alert-danger {
  color: <%= tema.alerta_problema_fuente %>;
  background-color: <%= tema.alerta_problema_fondo %>;
}

.btn {
  background-image: linear-gradient(to bottom, <%= tema.btn_accion_fondo_ini %>, <%= tema.btn_accion_fondo_fin %>);
  color: <%= tema.btn_accion_fuente %>;
}

.btn-primary {
  background-image: linear-gradient(to bottom, <%= tema.btn_primario_fondo_ini %>, <%= tema.btn_primario_fondo_fin %>);
  color: <%= tema.btn_primario_fuente %>;
}

.btn-danger {
  background-image: linear-gradient(to bottom, <%= tema.btn_peligro_fondo_ini %>, <%= tema.btn_peligro_fondo_fin %>);
  color: <%= tema.btn_peligro_fuente %>;
}

body {
  background-color: <%= tema.fondo %>;
  color: <%=tema.color_fuente %>;
}

.form-control {
  background-color: <%= tema.fondo %>;
  color: <%=  tema.color_fuente %>;
}

table {
  color: <%= tema.color_fuente %>;
}



/** Otros **/

.form-horizontal .control-label {
	padding-right: 20px;
}

.input {
	padding: 2px;
	border: 1px solid #ffffff;
}

.accordion-group {
	border: 2px solid #e5e5e5;
	border-radius: 10px;
	-webkit-border-radius: 10px;
}

.page-header {
	margin: 30px 0 30px;
}

.navbar-nav > li > a {
	padding-top: 10px;
	padding-bottom: 10px;
}

.navbar-brand {
	padding: 10px 10px;
	height: auto;
}



.master-container {
	margin-top: 20px;
}

.btn {
	background-color: #f5f5f5;
	color: #333333;
	text-shadow: 0 1px 1px rgba(255, 255, 255, 0.75);
	background-image: linear-gradient(to bottom, #ffffff, #e6e6e6);
	background-repeat: repeat-x;
	border: 1px solid #cccccc;
	border-bottom-color: #b3b3b3;
	box-shadow: inset 0 1px 0 rgba(255,255,255,.2), 0 1px 2px rgba(0,0,0,.05);
}
.btn-danger {
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	background-color: #da4f49;
	background-image: linear-gradient(to bottom, #ee5f5b, #bd362f);
	background-repeat: repeat-x;
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}

.btn-primary {
	color: #ffffff;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	background-color: #006dcc;
	background-image: linear-gradient(to bottom, #0088cc, #0044cc);
	background-repeat: repeat-x;
	border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}

.boolean {
	height: inherit;
} 

.error {
  padding: 2px;
  background-color: red;
  display: table;
}


.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  margin-bottom: 0px;
  background-color: #c00;
  color: #fff;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}

.pagination {
	text-align: center;
}

p.derechos {
	font-size: 80%;
	color: #000000;
	background-color: #f8f8f8;
	border-top: 1px solid #e7e7e7;
}

.anexosdiv {
	border: 1px solid #e7e7e7;
	border-radius: 5px;
}


