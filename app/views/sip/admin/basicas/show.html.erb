<%- model_class = @basica.class -%>
<div class="page-header">
  <h1><%=t '.title', 
    :default => model_class.human_attribute_name(model_class.model_name.to_s.demodulize) 
    %></h1>
</div>

<dl class="dl-horizontal">
  <% atributos_index.each do |atr|  %>
    <% p = @basica.presenta(atr) %>
    <% if p && p.length > 0 %>
      <dt><strong><%= model_class.human_attribute_name(atr) %>:</strong></dt>
      <dd><% if p.include?("\n") %>
        <pre><%= p %></pre>
      <% else %>
        <%= p %>
      <% end %></dd>
    <% end %>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_basicas_path(@basica), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_basica_path(@basica), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_basica_path(@basica),
              :method => 'delete',
              :data => { :confirm => 
                t('.confirm', :default => 
                    t("helpers.links.confirm", 
                      :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
