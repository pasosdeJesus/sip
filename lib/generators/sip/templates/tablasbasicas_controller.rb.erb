# encoding: UTF-8

module Admin
  class <%= nom_clase_plural %>Controller < Sip::Admin::BasicasController
    before_action :set_<%= nom_arch %>, 
      only: [:show, :edit, :update, :destroy]
    load_and_authorize_resource  class: ::<%= nom_clase %>

    def clase 
      "::<%= nom_clase %>"
    end

    def set_<%= nom_arch %>
      @basica = <%= nom_clase %>.find(params[:id])
    end

    def atributos_index
      [
        "id", 
        "nombre", 
        "observaciones", 
        "fechacreacion_localizada", 
        "habilitado"
      ]
    end

    def genclase
      'M'
    end

    def <%= nom_arch %>_params
      params.require(:<%= nom_arch %>).permit(*atributos_form)
    end

  end
end
